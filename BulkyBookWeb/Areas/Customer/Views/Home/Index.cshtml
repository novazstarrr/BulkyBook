@using BulkyBook.Models.ViewModels;
@model HomeViewModel

<form asp-controller="Home" asp-action="Index" asp-route-searchString="@Model.SearchString">
	<p >
		<input type="text" name="SearchString" value="@Model.SearchString" class="search-input" style="padding: 8px 12px;  border-radius: 1px; margin-top: 10px;" />
		<input type="submit" value="Search" />
		
	</p>
</form>



<div class="row pb-3">
		@foreach(var product in Model.Products)
		{
			<div class="col-lg-3 col-md-6">
				<div class="row p-2">
					<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
						<div class="card">
							<img src="@product.ImageUrl" class="card-img-top rounded"/>
							<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@product.Title</p>
							@*<p class="card-title h5 text-info">@product.Author</p>*@
							</div>
							<div class="pl-1">
								<p style="color:#158cba">Price: <b style="color:#158cba">@product.Price.ToString("£0.00")</b></p>
							</div>
							<div class="pl-1">
								<p><b style="color:#158cba">@product.CoverType.Name</b></p>
							</div>
							<div>
								<a asp-action="Details" class="btn btn-primary form-control" asp-route-productid="@product.Id">
									Details
								</a>
							</div>
							</div>
						</div>
					</div>
					
				</div>
			</div>
				
		}
</div>
